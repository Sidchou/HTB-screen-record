{
  "name": "HTB screen record",
  "version": "1.0",
  "manifest_version": 2,

  "background":{
    "scripts":["config.js","background.js"],
    "persistent":false
  },

  "browser_action": {
    "default_icon": {
      "16": "images/idle/icon16.png",
      "48": "images/idle/icon48.png",
      "128": "images/idle/icon128.png"
    }
  },
  "permissions": ["storage", "downloads", "notifications", "desktopCapture"]
}
